<div class="page-header">
  <h3>Assignment #<%= @assignment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Project</dt>
      <dd>
        <% if @assignment.project.present? %>
          <a href="/projects/<%= @assignment.project_id %>">
            <%= @assignment.project.title %>
          </a>
        <% end %>
      </dd>

      <dt>Designer</dt>
      <dd>
        <% if @assignment.designer.present? %>
          <a href="/designers/<%= @assignment.designer_id %>">
            <%= @assignment.designer.email %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/assignments" class="btn btn-primary">
        Back
      </a>
      <a href="/assignments/<%= @assignment.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_assignment/<%= @assignment.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

<!-- Validation failure messages -->
<% if @assignment.errors.any? %>
  <% @assignment.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Assignment</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_assignment" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for project_id -->
      <div class="form-group">
        <label for="project_id" class="control-label">
          Project
        </label>

        <input type="text" id="project_id" name="project_id" placeholder="Project" class="form-control" value="<%= @assignment.project_id %>">
      </div>

      <!-- Label and input for designer_id -->
      <div class="form-group">
        <label for="designer_id" class="control-label">
          Designer
        </label>

        <input type="text" id="designer_id" name="designer_id" placeholder="Designer" class="form-control" value="<%= @assignment.designer_id %>">
      </div>

      <button class="btn btn-success">
        Create Assignment
      </button>
      or
      <a href="/assignments">Cancel</a>
    </form>
  </div>
</div>

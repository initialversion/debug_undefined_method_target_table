<!-- Validation failure messages -->
<% if @assignment.errors.any? %>
  <% @assignment.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Assignment #<%= @assignment.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_assignment/<%= @assignment.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for project_id -->
      <div class="form-group">
        <label for="project_id" class="control-label">
          Project
        </label>

        <%= select_tag(:project_id, options_from_collection_for_select(Project.all, :id, :title, @assignment.project_id), :class => "form-control") %>
      </div>

      <!-- Label and input for designer_id -->
      <div class="form-group">
        <label for="designer_id" class="control-label">
          Designer
        </label>

        <input type="text" id="designer_id" name="designer_id" placeholder="Designer" class="form-control" value="<%= @assignment.designer_id %>">
      </div>

      <button class="btn btn-warning">
        Update Assignment
      </button>
      or
      <a href="/assignments/<%= @assignment.id %>">Cancel</a>
    </form>
  </div>
</div>

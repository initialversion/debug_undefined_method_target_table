<div class="page-header">
  <h3>Engagement #<%= @engagement.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Project</dt>
      <dd>
        <% if @engagement.project.present? %>
          <a href="/projects/<%= @engagement.project_id %>">
            <%= @engagement.project.title %>
          </a>
        <% end %>
      </dd>

      <dt>Client</dt>
      <dd>
        <% if @engagement.client.present? %>
          <a href="/clients/<%= @engagement.client_id %>">
            <%= @engagement.client.email %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/engagements" class="btn btn-primary">
        Back
      </a>
      <a href="/engagements/<%= @engagement.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_engagement/<%= @engagement.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>

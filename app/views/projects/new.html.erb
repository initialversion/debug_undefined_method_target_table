<!-- Validation failure messages -->
<% if @project.errors.any? %>
  <% @project.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Project</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_project" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Title
        </label>

        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @project.title %>">
      </div>

      <!-- Label and input for project_type -->
      <div class="form-group">
        <label for="project_type" class="control-label">
          Project type
        </label>

        <input type="text" id="project_type" name="project_type" placeholder="Project type" class="form-control" value="<%= @project.project_type %>">
      </div>

      <!-- Label and input for description -->
      <div class="form-group">
        <label for="description" class="control-label">
          Description
        </label>

        <input type="text" id="description" name="description" placeholder="Description" class="form-control" value="<%= @project.description %>">
      </div>

      <!-- Label and input for status -->
      <div class="form-group">
        <label for="status" class="control-label">
          Status
        </label>

        <input type="text" id="status" name="status" placeholder="Status" class="form-control" value="<%= @project.status %>">
      </div>

      <!-- Label and input for version -->
      <div class="form-group">
        <label for="version" class="control-label">
          Version
        </label>

        <input type="text" id="version" name="version" placeholder="Version" class="form-control" value="<%= @project.version %>">
      </div>

      <button class="btn btn-success">
        Create Project
      </button>
      or
      <a href="/projects">Cancel</a>
    </form>
  </div>
</div>

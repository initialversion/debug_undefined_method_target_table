<div class="page-header">
  <h1>
    Projects
    <a href="/projects/new" class="btn btn-lg btn-success">New Project</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "projects_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :title_cont, "Title contains" %>
    <%= f.text_field :title_cont, :class => "form-control", :placeholder => "Title contains" %>
  </div>

<div class="form-group">
    <%= f.label :status_cont, "Status contains" %>
    <%= f.text_field :status_cont, :class => "form-control", :placeholder => "Status contains" %>
  </div>

<div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

<div class="form-group">
    <%= f.label :project_type_cont, "Project type contains" %>
    <%= f.text_field :project_type_cont, :class => "form-control", :placeholder => "Project type contains" %>
  </div>

<div class="form-group">
  <%= f.label :version, "Version" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :version_gteq, :class => "form-control", :placeholder => "Version greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :version_lteq, :class => "form-control", :placeholder => "Version less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :created_at, "Engagement Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='engagementsgteqcreated_atPicker'>
                  <%= f.text_field :engagements_created_at_gteq, :class => "form-control", :placeholder => "Engagement Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='engagementslteqcreated_atPicker'>
                  <%= f.text_field :engagements_created_at_lteq, :class => "form-control", :placeholder => "Engagement Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#engagementsgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#engagementslteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#engagementsgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#engagementslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#engagementslteqcreated_atPicker').on("dp.change", function (e) {
                  $('#engagementsgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

<div class="form-group">
      <%= f.label :designers_email_cont, "Designer email contains" %>
      <%= f.text_field :designers_email_cont, :class => "form-control", :placeholder => "Designer email contains" %>
    </div>

<div class="form-group">
  <%= f.label :hours_available, "Company Hours available" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :companies_hours_available_gteq, :class => "form-control", :placeholder => "Company Hours available greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :companies_hours_available_lteq, :class => "form-control", :placeholder => "Company Hours available less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
      <%= f.label :clients_email_cont, "Client email contains" %>
      <%= f.text_field :clients_email_cont, :class => "form-control", :placeholder => "Client email contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/projects" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#projects_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Project type</th>
        <th>Description</th>
        <th>Status</th>
        <th>Version</th>
        <th>Actions</th>
      </tr>

      <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.project_type %></td>
        <td><%= project.description %></td>
        <td><%= project.status %></td>
        <td><%= project.version %></td>
        <td>
          <a href="/projects/<%= project.id %>" class="btn btn-primary">Show</a>
          <a href="/projects/<%= project.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_project/<%= project.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @projects, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

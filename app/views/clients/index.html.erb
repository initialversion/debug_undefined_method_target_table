<div class="page-header">
  <h1>
    Clients
    <a href="/clients/new" class="btn btn-lg btn-success">New Client</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Company</th>
        <th>Actions</th>
      </tr>

      <% @clients.each do |client| %>
      <tr>
        <td><%= client.email %></td>
        <td><%= client.password %></td>
        <td><%= client.first_name %></td>
        <td><%= client.last_name %></td>
        <td>
          <% if client.company.present? %>
            <a href="/companies/<%= client.company.id %>">
              <%= client.company.hours_available %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/clients/<%= client.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @clients, theme: 'twitter-bootstrap-4' %>
  </div>
</div>

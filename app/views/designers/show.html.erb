<div class="page-header">
  <h3>Designer #<%= @designer.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @designer.email %></dd>

      <dt>Password</dt>
      <dd><%= @designer.password %></dd>

      <dt>First name</dt>
      <dd><%= @designer.first_name %></dd>

      <dt>Last name</dt>
      <dd><%= @designer.last_name %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/designers" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>

<!-- A Designer has many assignments -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Assignments
      </li>

      <% @designer.assignments.each do |assignment| %>
        <li class="list-group-item">
          <a href="/assignments/<%= assignment.id %>">
            <%= assignment.project_id %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/assignments/<%= assignment.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <a href="/assignments/<%= assignment.id %>/edit" class="btn btn-warning">
              <i class="fa fa-edit"></i>
            </a>
            <a href="/delete_assignment/<%= assignment.id %>" class="btn btn-danger" rel="nofollow">
              <i class="fa fa-trash-o"></i>
            </a>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>


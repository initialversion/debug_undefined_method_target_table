<div class="page-header">
  <h1>
    Designers
    <a href="/designers/new" class="btn btn-lg btn-success">New Designer</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Actions</th>
      </tr>

      <% @designers.each do |designer| %>
      <tr>
        <td><%= designer.email %></td>
        <td><%= designer.password %></td>
        <td><%= designer.first_name %></td>
        <td><%= designer.last_name %></td>
        <td>
          <a href="/designers/<%= designer.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @designers, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
